
@model List<TechWebsite.Models.Product>
@{
    ViewData["Title"] = "ProductDisplay";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>
                @ViewBag.nameCategory
            </h3>
        </div>
        <div class="clear"></div>
    </div>
    <h1 style="text-align:center;color:darkred;font-size:30px;font-weight:bold">@ViewBag.notification</h1>
    <div class="section group">
        @foreach (var product in Model)
        {
            var photo = product.Photos.FirstOrDefault(p => p.Featured);
            <div class="grid_1_of_4 images_1_of_4">
                @if (photo != null)
                {
                    <a asp-area="admin" asp-controller="product" asp-action="details"><img src="~/products/@photo.Name" alt="" /></a>
                }
                else
                {
                    <a href="preview.html"><img src="~/products/default.png" alt="featured_image_none" /></a>
                }
                <h2>@product.Description</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@String.Format("{0:C}", product.Price)</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="preview.html">Add to Cart</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
</div>
