@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@model List<TechWebsite.Models.Product>
<div class="content">
    <div class="content_top">
        <div class="heading">
            <h3>New Products</h3>
        </div>
        <div class="see">
            <p><a href="#">See all Products</a></p>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section group">
        @foreach (var product in Model)
        {
            var photo = product.Photos.FirstOrDefault(p => p.Featured);
            <div class="grid_1_of_4 images_1_of_4">
                @if (photo != null)
                {
                    <a asp-controller="product" asp-action="details" asp-route-id="product.Id"><img src="~/products/@photo.Name" alt="" /></a>
                }
                else
                {
                    <a asp-controller="product" asp-action="details" asp-route-id="product.Id"><img src="~/products/default.png" alt="featured_image_none" /></a>
                }
                <h2>@product.Name</h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@String.Format("{0:C}", product.Price)</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="preview.html">Add to Cart</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
